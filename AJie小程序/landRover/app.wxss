/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
image {
  display: block;
  width: 100%;
}

video {
  width: 100%;
}

page {
  line-height: 1.5;
  font-size: 32rpx;
  background: #f8f8f8;
}
/* button */
.button {
  display: inline-block;
  margin: 4px;
  background: #e0e1e2;
  padding: 0 24px;
  color: rgba(0, 0, 0, 0.6);
  font-weight: bold;
  border-radius: 1px;
  font-size: 32rpx;
  transition: 0.3s all;
}

.button::after {
  content: none;
}

.button.primary {
  background: #000000;
  color: rgba(255, 255, 255, 0.9);
}

.button-hover {
  opacity: 0.75;
}
.section {
  height: 100vh;
}

.content {
  padding: 48rpx 48rpx 64rpx;
}

.header {
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-bottom: 48rpx;
}

.header.border::after {
  content: "";
  display: block;
  width: 40px;
  border-bottom: 2px solid #000;
  padding-bottom: 8px;
}

.sub-header {
  font-size: 32rpx;
  letter-spacing: 3px;
  text-transform: uppercase;
}

.description,
.meta {
  margin-bottom: 8px;
  color: rgba(0, 0, 0, 0.85);
  font-size: 32rpx;
}
.center {
  text-align: center;
}
