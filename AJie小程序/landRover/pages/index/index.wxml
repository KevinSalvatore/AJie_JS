<swiper class="section herp white" indicator-dots="true">
  <block wx:for="{{slides}}">
    <swiper-item>
      <image src="{{item.image}}" mode="aspectFill" />
      <view class="content center">
        <view class="sub-header">{{item.sub_header}}</view>
        <view class="header">{{item.header}}</view>
        <view class="description">{{item.description}}</view>
        <view class="action">
          <button class="button" bindtap="testDrive">预约试驾</button>
          <button class="button primary" data-id="{{item.id}}" bindtap="handleReadMore">
            了解更多
          </button>
        </view>
      </view>
    </swiper-item>
  </block>
</swiper>