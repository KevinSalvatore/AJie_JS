$color-1 = #fff
$color-2 = rgba(0, 0, 0, 0.1)
$color-3 = #efefef
$color-4 = rgba(0, 0, 0, 0.2)
$color-5 = #000

*
    margin 0
    padding 0

html
    // background url(http://unsplash.it/1500/1000?image=881&blur=50) no-repeat
    background-size cover
    text-align center
    font-size-adjust 10px

body
    margin 0
    font-size 2rem
    display flex
    float 1
    min-height 100vh
    align-items center

.clock
    width 30rem
    height 30rem
    border 1px solid $color-1
    border-radius 50%
    margin 50px auto
    position relative
    padding 2rem
    box-shadow 0 0 4px $color-2, inset 0 0 3px $color-3,
    inset 0 0 10px black, 0 0 10px $color-4

.clock-face
    position relative
    width 100%
    height 100%
    transform translateY(-3px)

.hand
    width 50%
    height 20px
    background-color $color-5
    position absolute
    top 50%
    transform-origin 100%
    transition all 0.05s
    transition-timing-function cubic-bezier(0.1, 2.7, 0.58, 1)
